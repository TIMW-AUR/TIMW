pkgname=spirv-llvm-translator-git
pkgver=20.1.2.r7.g834db1a19
pkgrel=1
arch=(x86_64)
makedepends=(cmake git llvm ninja spirv-headers)
depends=(gcc-libs glibc llvm-libs spirv-tools)
groups=(vulkan-devel)
provides=(spirv-llvm-translator)
conflicts=(spirv-llvm-translator)
source=(SPIRV-LLVM-Translator::git+https://github.com/KhronosGroup/SPIRV-LLVM-Translator.git#branch=llvm_release_200)

pkgver() {
    cd SPIRV-LLVM-Translator
	git describe --long --tags | sed 's/^[^0-9]*//; s/\([^-]*-g\)/r\1/; s/-/./g'
}

build() {
  cmake -S SPIRV-LLVM-Translator -B _build -G Ninja \
    -D CMAKE_BUILD_TYPE=Release \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D LLVM_EXTERNAL_SPIRV_HEADERS_SOURCE_DIR=/usr/include/spirv \
    -Wno-dev
  cmake --build _build
}

package() {
  DESTDIR="${pkgdir}" cmake --install _build
}
#    -D BUILD_SHARED_LIBS=ON \
#    -D CMAKE_POSITION_INDEPENDENT_CODE=ON \
